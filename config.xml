<?xml version='1.0' encoding='utf-8'?>
<widget id="com.itsvarungupta.referme" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Refer Me!</name>
    <description>
        Refer me app for all IT corporate employees
    </description>
    <author email="hello@itsvarungupta.com" href="http://itsvarungupta.com">
        Varun Gupta
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="10000" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- Icon -->
        <icon density="ldpi" src="www/res/icon/android/refer-me-logo.png" />
        <icon density="mdpi" src="www/res/icon/android/refer-me-logo.png" />
        <icon density="hdpi" src="www/res/icon/android/refer-me-logo.png" />
        <icon density="xhdpi" src="www/res/icon/android/refer-me-logo.png" />
        <icon density="xxhdpi" src="www/res/icon/android/refer-me-logo.png" />
        <icon density="xxxhdpi" src="www/res/screen/android/refer-me-logo.png" />
        <!-- Splash Screen -->
        <splash density="land-ldpi" src="platforms/android/res/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="platforms/android/res/drawable-land-mdpi/screen.png" />
        <splash density="land-hdpi" src="platforms/android/res/drawable-land-hdpi/screen.png" />
        <splash density="land-xhdpi" src="platforms/android/res/drawable-land-xhdpi/screen.png" />
        <splash density="port-ldpi" src="platforms/android/res/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/screen.png" />
        <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/screen.png" />
        <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/screen.png" />
    </platform>
    <!-- <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform> -->
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <engine name="android" spec="^7.0.0" />
</widget>
